@model List<Room>



<section class="h-100">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-normal mb-0 text-black">Booking Cart</h3>
     
                </div>
                @foreach(var item in Model ){
                <div class="card rounded-3 mb-4">
                    <div class="card-body p-4">
                        <div class="row d-flex justify-content-between align-items-center">
                            <div class="col-md-2 col-lg-2 col-xl-2">
                                    <img src="~/img/room-2.jpg"
                                     class="img-fluid rounded-3" alt="Cotton T-shirt">
                            </div>
                            <div class="col-md-3 col-lg-3 col-xl-3">
                                <p class="lead fw-normal mb-2">Room</p>
                                <p><span class="text-muted">@item.View</span>
                            </div>
                           
                            <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                <h5 class="mb-0">@item.Price</h5>
                            </div>
                            <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                    <a asp-controller="Cart" asp-action="RemoveFromCart" asp-route-id="@item.ID" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                }
                <div class="card">
                    <div class="card-body">
                        <a asp-controller="Cart" asp-action="ProccedToPay" class="btn btn-warning btn-block btn-lg">Procced To Pay</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
