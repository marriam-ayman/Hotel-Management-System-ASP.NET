                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <form method="post" asp-action="AddFeedBack">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="Feedback" name="Feedback" asp-for="@Model.Feedback">
                                    <label for="Feedback">Feedback</label>
                                </div>
                            </div>
                         
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">
                                    Enter A Feedback
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
