@{
}
<head>
    <title>Statistics</title>
</head>

<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 p-0" style="background-image: url(../img/carousel-1.jpg);">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center pb-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Statistics</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center text-uppercase">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">Statistics</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Service Start -->
<div asp-validation-summary="All"></div>
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Statistics</h6>
            <h1 class="mb-5">Occupancy Rate <span class="text-primary text-uppercase">@ViewBag.Occupied %</span></h1>
        </div>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <a class="service-item rounded" asp-controller="Statistics" asp-action="Date">

                    <h5 class="mb-3">Filter By Date</h5>
                  
                </a>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.2s">
                <a class="service-item rounded" asp-controller="Statistics" asp-action="Guest">

                    <h5 class="mb-3">Filter By Guest</h5>
                  
                </a>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                <a class="service-item rounded" asp-controller="Statistics" asp-action="Rooms">

                    <h5 class="mb-3">Filter By Room</h5>
                  
                </a>
            </div>
           
        </div>
    </div>
</div>
<!-- Service End -->